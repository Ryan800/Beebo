<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/host_background"
    android:fitsSystemWindows="true" xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainTimeLineToolBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorPrimary"
        android:minHeight="48dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/writeWeiboDrawerL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainTimeLineToolBar" >

        <FrameLayout
            android:id="@+id/center_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mainTimeLineToolBar" />

        <FrameLayout
            android:id="@+id/left_drawer_layout"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/gray"
            android:choiceMode="singleChoice"
            tools:ignore="RtlHardcoded" />

        <FrameLayout
            android:id="@+id/right_drawer_layout"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/gray"
            android:choiceMode="singleChoice"
            tools:ignore="RtlHardcoded" />

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>